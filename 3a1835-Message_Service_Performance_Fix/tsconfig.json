{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["mocha", "node"]
  },
  "include": ["tests/**/*.ts", "repository_after/**/*.ts", "repository_before/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
